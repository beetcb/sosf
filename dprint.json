{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "projectType": "openSource",
  "indentWidth": 2,
  "lineWidth": 80,
  "incremental": true,
  "typescript": {
    "semiColons": "asi",
    "quoteStyle": "preferSingle"
  },
  "json": {},
  "markdown": {},
  "includes": ["**/*.{ts,tsx,js,jsx,cjs,mjs,json,md}"],
  "excludes": ["**/node_modules", "**/*-lock.json", "**/docs"],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.46.0.wasm",
    "https://plugins.dprint.dev/json-0.11.0.wasm",
    "https://plugins.dprint.dev/markdown-0.7.1.wasm"
  ]
}
